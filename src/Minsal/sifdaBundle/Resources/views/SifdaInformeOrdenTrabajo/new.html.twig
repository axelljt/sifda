{% extends 'MinsalsifdaBundle::layoutTecnico.html.twig' %}

{% block contenido_in -%}
{{form_start(form)}}
{{form_errors(form)}}
<div class="row-fluid">
    <center><h3>Agregar Informe de Orden de Trabajo</h3></center>
    <table id="tabla" class="table table-bordered table-hover table-condensed">
        <tbody>
            <tr>
                <th>Id Orden de trabajo</th>
                <td>{{ orden.id }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ orden.descripcion }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ orden.codigo }}</td>
            </tr>
            
            <tr>
                <th>Observacion</th>
                <td>{{ orden.observacion }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="span12">
        <div class="row-fluid">
            <div class="span4 offset2">
                 {{form_row(form.detalle)}}
                 {{form_row(form.fechaRealizacion)}}         
                 {{form_row(form.fechaRegistro)}}         
                 {{form_row(form.idOrdenTrabajo)}}         
            </div>          
            <div class="span5 offset1">
                 {{form_row(form.idDependenciaEstablecimiento)}}
                 {{form_row(form.idEtapa)}}
                 {{form_row(form.idEmpleado)}}
                 {{form_row(form.idSubactividad)}}
            </div>
        </div>
        <center>
            <table id="botones">
            <tr>
                <td>{{form_row(form.submit,{'attr':{'class':'btn'}})}}</td> 
                <td><a href="{{ path('sifda_ordentrabajo')}}" class="btn">Regresar</a></td>
            </tr>    
            </table>
        </center>    
    </div>
    
           
    
</div>
{{form_end(form)}}                 
{% endblock %}

